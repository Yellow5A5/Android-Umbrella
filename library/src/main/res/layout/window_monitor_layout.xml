<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="18dp"
    android:background="#ffffffff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/window_monitor_cpu_tips"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:padding="1dp"
        android:scaleType="centerInside"
        android:src="@drawable/window_monitor_cpu_image" />

    <TextView
        android:id="@+id/window_monitor_cpu_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="66%"
        android:textColor="#52A2D2"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/window_monitor_ram_tips"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/window_monitor_ram_image" />

    <TextView
        android:id="@+id/window_monitor_ram_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="66%"
        android:textColor="#52A2D2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/window_monitor_fps_tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:background="@drawable/window_monitor_fps_tv_tips_bg"
        android:gravity="center"
        android:text="fps"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/window_monitor_fps_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="66%"
        android:textColor="#52A2D2"
        android:textSize="12sp" />

</LinearLayout>